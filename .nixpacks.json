{
    "phases": {
        "setup": {
            "nixPkgs": [
                "php82",
                "php82Packages.composer",
                "nodejs_20"
            ]
        },
        "install": {
            "cmds": [
                "composer install --optimize-autoloader --no-dev",
                "npm install",
                "npm run build"
            ]
        }
    },
    "start": {
        "cmd": "php artisan migrate --force && php artisan storage:link && php -S 0.0.0.0:$PORT -t public"
    }
}